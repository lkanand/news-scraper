<header>
	<div class = "wrapper">
		<img src = "/img/longhorn-logo.png">
		<div id = "title">
			<h1>Texas Sports Wire</h1>
			<h2>The Pulse of the Longhorns</h2>
		</div>
		<img src = "/img/longhorn-logo.png">
	</div>
</header>

<div id = "menu">
	<ul id = "home">
		<a href = "/"><li>Home</li></a>
	</ul>
</div>

<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
      	<h5>Discussion</h5>
      	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div id = "comments">
      	</div> 
      	<textarea id = "new-comment"></textarea> 
      	<button type="button" class="btn btn-secondary" id = "submit-new-comment">Submit</button>
      </div>
    </div>
  </div>
</div>

<div class = "parallax-saved">
</div>

<footer>
	<h1 id = "no-saved-articles" class = "">There Are No Saved Articles</h1>
	<div class = "article-group" id = "burnt-orange-nation">
		<h1>Burnt Orange Nation</h1>
		{{#each articles}}
			{{#if burntorange}}
				<div class = "news-article">
					<div class = "news-article-img" style = "background-image: url('{{imageLink}}')">
					</div>
					<div class = "news-article-info">
						<h3><a href = "{{link}}" target = "_blank">{{title}}</a></h3>
						<p class = "author">By: {{author}}</p>
						<p class = "summary">{{summary}}</p>
						<button class = "unsave" article-id = "{{_id}}">Unsave</button>
						<button class = "comment" article-id = "{{_id}}">Comment</button> 
					</div>
				</div>
			{{/if}}
		{{/each}}
	</div>

	<div class = "article-group" id = "hook-em">
		<h1>Hook 'Em</h1>
		{{#each articles}}
			{{#if hookem}}
				<div class = "news-article">
